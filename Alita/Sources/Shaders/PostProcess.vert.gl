// ++++++++++++++++ start attributes
layout(location = IA_LOCATION_POSITION) in vec3 inPosition;
layout(location = IA_LOCATION_TEXCOORD) in vec2 inTexCoord;
// ---------------- end of attributes

layout(location = 0) out vec2 _UV0;

void TShading() {
    gl_Position = vec4(inPosition, 1.0);
    _UV0        = inTexCoord;
}
