#ifndef USE_NORMAL
#define USE_NORMAL 0
#endif

#ifndef USE_UV0
#define USE_UV0 0
#endif

// ++++++++++++++++ start attributes
layout(location = IA_LOCATION_POSITION) in vec3 inPosition;
// ---------------- end of attributes

layout(binding = 1) uniform Batch {
    mat4 WorldMatrix;
} uBatch;

layout(location = 0) out float _Depth;

void main() {
    gl_Position = uGlobal.ProjMatrix * uGlobal.ViewMatrix * uBatch.WorldMatrix * vec4(inPosition, 1.0);
    _Depth = gl_Position.z / gl_Position.w;
}
